{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "importHelpers": true,
    "target": "es5",
    "lib": [ "es2015", "es2015.iterable", "dom" ]
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}
