{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "importHelpers": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": [ "es2015", "dom" ]
  },
  "exclude": [
    "node_modules",
    "typings"
  ]
}
